<!--Main-content-->
<main id="main-content">
  <!--Hero-section-->
  <div class="hero-bg-wrapper">
    <section
      id="hero-section"
      class="hero-section section"
      aria-labelledby="hero-title"
    >
      <div class="max-width-wrapper">
        <div class="hero-content-wrapper">
          <div class="hero-section-content max-width-60ch">
            <h1 id="hero-title" class="fs-800 ff-sans">
              Šah klub <span class="text-emphasize">Končar</span>
            </h1>
            <p class="fs-500">
              Šahovski klub u Zagrebu s tradicijom dugom preko 75 godina.
              Mjesto za
              <span class="text-emphasize">igrati</span> i
              <span class="text-emphasize">trenirati</span> šah. Započni svoje
              šahovsko putovanje!
            </p>
            <a class="main-button" href="/kontakt/"
              >Pridruži nam se
